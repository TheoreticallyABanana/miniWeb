<!DOCTYPE html>
<html>
  <head>
    <title>MiniWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
  <% if logged_in? %>
    <h1 id="Welcome">Welcome, <%= current_user.name %>!</h1>
      <nav>
        <ul>
          <li><%= link_to "course", course_path(current_user.course_id) %></li>
          <li><%= link_to "Units", units_path %></li>
          <li><%= link_to "Log Out", logout_path, method: :delete %></li>
        </ul>
      </nav>
  <% else %>
    <h1 id="Welcome2">Welcome!, Please log in</h1>
      <nav>
        <div id="logTag"><%= link_to "Log In", login_path %></div>
      </nav>    
  <% end %>
  </header>

    <div class="container" id="mainContent">
      <%= yield %>
    </div>

    <footer class="footer">
    <p class="text-muted">Logo plus school name</p>
    </footer>
</body>
</html>